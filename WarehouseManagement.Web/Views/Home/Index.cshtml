@{
    ViewData["Title"] = "Warehouse Management System";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Warehouse Management System</h1>
    <p>Manage your inventory, products, and suppliers efficiently.</p>

    <div class="row mt-5">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Manage your product catalog</p>
                    <a href="/api/products" class="btn btn-primary">View Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Inventory</h5>
                    <p class="card-text">Track stock levels</p>
                    <a href="/Home/Inventory" class="btn btn-primary">View Inventory</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Organize product categories</p>
                    <a href="/Home/Categories" class="btn btn-primary">View Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Suppliers</h5>
                    <p class="card-text">Manage suppliers</p>
                    <a href="/Home/Suppliers" class="btn btn-primary">View Suppliers</a>
                </div>
            </div>
        </div>
    </div>
</div>